@model Event.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout_LoginRegister.cshtml";
}
@if (TempData["Success"] != null)
{
    <div class=" alert-success" role="alert">
        <span><b></b> - @TempData["Success"]<a asp-action="Login">Login</a></span>
    </div>
}
<h1>ResetPassword</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Email" class="form-control" type="hidden" />

            <div class="form-group">
                <label asp-for="Password" class="control-label">New Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <input asp-for="token" class="form-control" type="hidden" />

            <div class="form-group">
                <input type="submit" value="Reset" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}