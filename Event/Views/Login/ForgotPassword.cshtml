@model Event.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout_LoginRegister.cshtml";
}


@if (TempData["Error"] != null)
{
    <div class="alert alert-success" role="alert">
        <span><b>Success!</b> - @TempData["Error"]</span>
    </div>
}

<div class="container">
    <div class="row mt-5">
        <div class="col-6 card offset-3  ">
            <div class="text-center">
                <h1 class="text-info">Login</h1>

            </div>
            <form asp-action="ForgotPassword">

                <div class="form-group">

                    Email <input type="text" asp-for="Email" class="form-control" autocomplete="off" placeholder="Enter Email" />
                </div>
                <br />
               
                <center>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-lg mb-1" value="Submit">Submit</button>
                    </div>
                    <div class="form-group">
                        <a class="text-primary" asp-controller="Login" asp-action="login"></a>
                    </div>
                </center>
                
            </form>
            <br />
           





